<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.dhruvdroid.sampleott.data.Tray" />

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="@{data.name}"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="@{TextUtils.isEmpty(data.name) ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moviePoster"
                android:layout_width="130dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:background="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/longDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/paymentPlan"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{String.format(@string/plan_free,data.paymentPlan)}"
                android:visibility="@{TextUtils.isEmpty(data.paymentPlan) ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toEndOf="@+id/moviePoster"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:text="Plan: Pro" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/releaseYear"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{String.format(@string/release_year_2019, data.releaseYear)}"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="@{TextUtils.isEmpty(data.releaseYear) ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toEndOf="@+id/paymentPlan"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:text="Release Year: 2020" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/duration"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@{String.format(@string/duration, data.videoDuration)}"
                android:visibility="@{TextUtils.isEmpty(data.videoDuration) ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toStartOf="@+id/type"
                app:layout_constraintStart_toEndOf="@+id/moviePoster"
                app:layout_constraintTop_toBottomOf="@+id/paymentPlan"
                tools:text="Duration: 4.44" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/type"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{String.format(@string/type, data.type)}"
                android:visibility="@{TextUtils.isEmpty(data.type) ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/duration"
                app:layout_constraintTop_toBottomOf="@+id/paymentPlan"
                tools:text="Type: Movie" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/createdOn"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{String.format(@string/created_on, data.created_on)}"
                android:visibility="@{TextUtils.isEmpty(data.created_on) ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toEndOf="@+id/moviePoster"
                app:layout_constraintTop_toBottomOf="@+id/duration"
                tools:text="Created On: 2020-03-20T07:35:26.271485Z" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/updatedOn"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{String.format(@string/updated_on, data.updated_on)}"
                android:visibility="@{TextUtils.isEmpty(data.updated_on) ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toEndOf="@+id/moviePoster"
                app:layout_constraintTop_toBottomOf="@+id/createdOn"
                tools:text="Updated On: 2020-03-20T07:35:26.271485Z" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/shortDescription"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:text="@{data.shortDescription}"
                android:visibility="@{TextUtils.isEmpty(data.shortDescription) ? View.GONE : View.VISIBLE}"
                app:layout_constraintBottom_toTopOf="@+id/longDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/moviePoster"
                app:layout_constraintTop_toBottomOf="@+id/updatedOn"
                tools:text="Plan: Pro" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/longDescription"
                style="@style/TextViewStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@{data.description}"
                android:visibility="@{TextUtils.isEmpty(data.description) ? View.GONE : View.VISIBLE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/moviePoster"
                tools:text="Plan: Pro" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>